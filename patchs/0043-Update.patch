From: vndroid <diracsvip@gmail.com>
Date: Tue, 28 Jun 2022 15:53:56 +0800
Subject: [PATCH 43/85] Update

- Fix path error
---
 docker/alpine/Dockerfile | 7 ++++---
 1 file changed, 4 insertions(+), 3 deletions(-)

diff --git a/docker/alpine/Dockerfile b/docker/alpine/Dockerfile
index a5fce1b..f6988d4 100644
--- a/docker/alpine/Dockerfile
+++ b/docker/alpine/Dockerfile
@@ -28,10 +28,11 @@ RUN set -x \
  # Build & install
  && cd /tmp/repo \
  && ./autogen.sh \
- && ./configure --prefix=/usr --disable-documentation \
+ && ./configure --prefix=/usr/local --disable-documentation \
  && make -j$(getconf _NPROCESSORS_ONLN) \
  && make install \
- && ls /usr/bin/ss-* | xargs -n1 setcap cap_net_bind_service+ep \
+ && cd /usr/local/bin \
+ && ls /usr/local/bin/ss-* | xargs -n1 setcap cap_net_bind_service+ep \
  && strip $(ls /usr/local/bin | grep -Ev 'ss-nat') \
  && apk del .build-deps \
  # Runtime dependencies setup
@@ -39,7 +40,7 @@ RUN set -x \
       ca-certificates \
       rng-tools \
       tzdata \
-      $(scanelf --needed --nobanner /usr/bin/ss-* \
+      $(scanelf --needed --nobanner /usr/local/bin/ss-* \
       | awk '{ gsub(/,/, "\nso:", $2); print "so:" $2 }' \
       | sort -u) \
  && rm -rf /tmp/repo
